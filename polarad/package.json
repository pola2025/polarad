{
  "name": "polarad",
  "version": "2.0.0",
  "private": true,
  "description": "Polarad Monorepo - Admin & Client Management System",
  "$comment_structure": {
    "_NOTE": "이 파일 구조 혼동 방지용 - Claude가 읽을 때 참고",
    "GitHub저장소": "pola2025/polarad",
    "로컬루트": "F:/polasales/ (여기가 Git 루트)",
    "모노레포위치": "F:/polasales/polarad/ (Git 기준: polarad/)",
    "Vercel_admin": "Root Directory = polarad/apps/admin",
    "Vercel_client": "Root Directory = polarad/apps/client"
  },
  "scripts": {
    "postinstall": "npx prisma generate --schema=packages/database/prisma/schema.prisma",
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter=@polarad/admin",
    "dev:client": "turbo dev --filter=@polarad/client",
    "build": "turbo build",
    "build:admin": "turbo build --filter=@polarad/admin",
    "build:client": "turbo build --filter=@polarad/client",
    "lint": "turbo lint",
    "db:generate": "turbo db:generate --filter=@polarad/database",
    "db:push": "turbo db:push --filter=@polarad/database",
    "db:migrate": "pnpm --filter @polarad/database db:migrate",
    "db:studio": "pnpm --filter @polarad/database db:studio",
    "db:seed": "pnpm --filter @polarad/database db:seed"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "resend": "^6.5.2"
  },
  "pnpm": {
    "overrides": {
      "form-data": "^4.0.0",
      "tough-cookie": "^4.1.3",
      "next": "^15.5.7"
    }
  }
}
