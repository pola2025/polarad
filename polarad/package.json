{
  "name": "polarad",
  "version": "2.0.0",
  "private": true,
  "description": "Polarad Monorepo - Admin & Client Management System",
  "scripts": {
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter=@polarad/admin",
    "dev:client": "turbo dev --filter=@polarad/client",
    "build": "turbo build",
    "build:admin": "turbo build --filter=@polarad/admin",
    "build:client": "turbo build --filter=@polarad/client",
    "lint": "turbo lint",
    "db:generate": "turbo db:generate --filter=@polarad/database",
    "db:push": "turbo db:push --filter=@polarad/database",
    "db:migrate": "pnpm --filter @polarad/database db:migrate",
    "db:studio": "pnpm --filter @polarad/database db:studio",
    "db:seed": "pnpm --filter @polarad/database db:seed"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "resend": "^6.5.2"
  },
  "pnpm": {
    "overrides": {
      "form-data": "^4.0.0",
      "tough-cookie": "^4.1.3",
      "next": "^15.5.7"
    }
  }
}
